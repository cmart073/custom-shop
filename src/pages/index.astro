---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Custom Paint Fill & Grips — CMart073">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero__content">
        <h1 class="hero__title">Custom Paint Fill & Grips — Make Your Clubs Yours</h1>
        <p class="hero__subtitle">
          Precision cosmetic paint fill for irons and putters. Optional grip installs.
          Mail-in service. Fast turnaround. Built for golfers who care about the details.
        </p>
        <div class="hero__actions">
          <a href="/order" class="btn btn--primary btn--lg">Start an Order</a>
          <a href="/pricing" class="btn btn--secondary btn--lg">View Pricing</a>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Preview -->
  <section class="section">
    <div class="container">
      <h2 class="text-center mb-2xl">How It Works</h2>
      
      <div class="steps">
        <div class="step step--active">
          <div class="step__number">1</div>
          <div class="step__label">Submit your order and upload photos</div>
        </div>
        <div class="step step--active">
          <div class="step__number">2</div>
          <div class="step__label">Ship your clubs to CMart073</div>
        </div>
        <div class="step step--active">
          <div class="step__number">3</div>
          <div class="step__label">We customize + install grips if requested</div>
        </div>
        <div class="step step--active">
          <div class="step__number">4</div>
          <div class="step__label">Clubs shipped back with before/after photos</div>
        </div>
      </div>

      <p class="text-center text-muted mt-xl">
        <strong>Typical turnaround: 2–5 business days after receipt</strong>
      </p>
    </div>
  </section>

  <!-- Trust Section -->
  <section class="section section--alt">
    <div class="container container--narrow">
      <h2 class="text-center mb-2xl">Why CMart073</h2>
      
      <div class="grid grid--2" style="gap: 2rem;">
        <div class="card">
          <h3 style="font-size: 1.125rem; margin-bottom: 0.5rem;">Cosmetic Only</h3>
          <p class="text-muted" style="margin: 0;">No performance changes — just beautiful, personalized clubs.</p>
        </div>
        <div class="card">
          <h3 style="font-size: 1.125rem; margin-bottom: 0.5rem;">Durable Enamel Paint</h3>
          <p class="text-muted" style="margin: 0;">Professional-grade paint that lasts through seasons of play.</p>
        </div>
        <div class="card">
          <h3 style="font-size: 1.125rem; margin-bottom: 0.5rem;">Photos Required</h3>
          <p class="text-muted" style="margin: 0;">We review your clubs before work begins for best results.</p>
        </div>
        <div class="card">
          <h3 style="font-size: 1.125rem; margin-bottom: 0.5rem;">Handcrafted Care</h3>
          <p class="text-muted" style="margin: 0;">Every club handled by hand, not an assembly line.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview -->
  <section class="section">
    <div class="container container--narrow">
      <h2 class="text-center mb-lg">Our Services</h2>
      <p class="text-center text-muted mb-2xl">Premium cosmetic customization for your golf clubs</p>
      
      <div style="display: grid; gap: 1.5rem;">
        <div class="card card--hover" style="display: flex; justify-content: space-between; align-items: center;">
          <div>
            <h3 style="font-size: 1.125rem; margin-bottom: 0.25rem;">Iron Paint Fill</h3>
            <p class="text-muted" style="margin: 0; font-size: 0.9375rem;">Single or multi-color fill for your irons</p>
          </div>
          <div style="text-align: right;">
            <div style="font-family: var(--font-display); font-size: 1.5rem; font-weight: 600; color: var(--color-primary);">$65–$85</div>
          </div>
        </div>
        
        <div class="card card--hover" style="display: flex; justify-content: space-between; align-items: center;">
          <div>
            <h3 style="font-size: 1.125rem; margin-bottom: 0.25rem;">Putter Paint Fill</h3>
            <p class="text-muted" style="margin: 0; font-size: 0.9375rem;">Precision fill for your putter</p>
          </div>
          <div style="text-align: right;">
            <div style="font-family: var(--font-display); font-size: 1.5rem; font-weight: 600; color: var(--color-primary);">$55</div>
          </div>
        </div>
        
        <div class="card card--hover" style="display: flex; justify-content: space-between; align-items: center;">
          <div>
            <h3 style="font-size: 1.125rem; margin-bottom: 0.25rem;">Grip Installation</h3>
            <p class="text-muted" style="margin: 0; font-size: 0.9375rem;">Customer-supplied or we source</p>
          </div>
          <div style="text-align: right;">
            <div style="font-family: var(--font-display); font-size: 1.5rem; font-weight: 600; color: var(--color-primary);">$5–$7<span style="font-size: 0.875rem; font-weight: 400;">/grip</span></div>
          </div>
        </div>
      </div>

      <div class="text-center mt-2xl">
        <a href="/pricing" class="btn btn--secondary">View Full Pricing</a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%); color: white;">
    <div class="container text-center">
      <h2 style="color: white; margin-bottom: 1rem;">Ready to Customize Your Clubs?</h2>
      <p style="opacity: 0.9; margin-bottom: 2rem; max-width: 500px; margin-left: auto; margin-right: auto;">
        Submit your order, upload photos of your clubs, and we'll take it from there.
      </p>
      <a href="/order" class="btn btn--accent btn--lg">Start Your Order</a>
    </div>
  </section>
</Layout>
